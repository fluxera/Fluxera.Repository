<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
	</PropertyGroup>

	<PropertyGroup>
		<Title>Fluxera.Repository.MongoDB</Title>
		<Description>A MongoDB repository implementation.</Description>
		<PackageTags>fluxera;library;extensions;repository;storage;mongodb</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\README.md" Link="Properties\README.md">
			<Pack>true</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\..\icon.png" Link="Properties\icon.png">
			<Pack>true</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="Fluxera.Repository.MongoDB.IntegrationTests" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Fluxera.ComponentModel.Annotations" Version="7.1.0" />
		<PackageReference Include="Fluxera.Enumeration.MongoDB" Version="7.1.2" />
		<PackageReference Include="Fluxera.Spatial.MongoDB" Version="7.1.2" />
		<PackageReference Include="Fluxera.StronglyTypedId.MongoDB" Version="7.1.3" />
		<PackageReference Include="Fluxera.Temporal.MongoDB" Version="7.1.1" />
		<PackageReference Include="Fluxera.ValueObject.MongoDB" Version="7.1.2" />
		<PackageReference Include="GitVersion.MsBuild" Version="5.12.0">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="MongoDB.Driver" Version="2.19.0" />
		<PackageReference Include="MongoDB.Driver.Core.Extensions.DiagnosticSources" Version="1.3.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Fluxera.Repository\Fluxera.Repository.csproj" />
	</ItemGroup>

</Project>